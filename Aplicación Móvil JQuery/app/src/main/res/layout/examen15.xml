<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:text="@string/pregunta15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta1_15"
        android:id="@+id/checkReducir" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta2_15"
        android:id="@+id/checkProveer" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta3_15"
        android:id="@+id/checkPractica" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="@string/aceptar"
        android:id="@+id/btnAceptar"
        android:layout_gravity="center_horizontal"
        android:background="#a8f7a5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/btnSiguiente"
        android:id="@+id/btnSiguiente"
        android:layout_gravity="right"
        android:background="#a1d9f4"
        android:enabled="true" />




</LinearLayout>