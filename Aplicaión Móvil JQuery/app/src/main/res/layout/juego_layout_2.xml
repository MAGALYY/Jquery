<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="#fcec79">

    <TextView
        android:text="@string/completa_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffac6d"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regresar"
        android:layout_gravity="left"
        android:id="@+id/btnRegresar"/>

    <ImageButton
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:src="@drawable/android2"
        android:layout_gravity="center"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/siguiente"
        android:layout_gravity="right"
        android:id="@+id/btnSiguiente"/>



    <EditText
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/edtRespuesta"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="@string/jugar"
        android:id="@+id/btnAceptar"
        android:layout_gravity="center_horizontal"
        android:background="#a8f7a5" />






</LinearLayout>